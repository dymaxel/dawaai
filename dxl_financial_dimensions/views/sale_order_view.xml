<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_dxl" model="ir.ui.view">
            <field name="name">sale.order.view.form.inherit.dxl</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='analytic_tag_ids']" position='before'>
                    <field name="bu"/>
                    <field name="mob" domain="[('parent_id', '=', bu)]"/>
                    <field name="toc" domain="[('parent_id', '=', mob)]"/>
                    <field name="pc" domain="[('parent_id', '=', toc)]"/>
                    <field name="loc" domain="[('parent_id', '=', pc)]"/>
                    <field name="fun" domain="[('parent_id', '=', loc)]"/>
                    <field name="analytic_account_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
