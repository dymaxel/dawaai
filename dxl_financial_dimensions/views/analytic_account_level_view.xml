<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_dxl" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit.dxl</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position='before'>
                    <field name="bu"/>
                    <field name="mob" domain="[('parent_id', '=', bu)]"/>
                    <field name="toc" domain="[('parent_id', '=', mob)]"/>
                    <field name="pc" domain="[('parent_id', '=', toc)]"/>
                    <field name="loc" domain="[('parent_id', '=', pc)]"/>
                    <field name="fun" domain="[('parent_id', '=', loc)]"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']" position='before'>
                    <field name="bu"/>
                    <field name="mob" domain="[('parent_id', '=', bu)]"/>
                    <field name="toc" domain="[('parent_id', '=', mob)]"/>
                    <field name="pc" domain="[('parent_id', '=', toc)]"/>
                    <field name="loc" domain="[('parent_id', '=', pc)]"/>
                    <field name="fun" domain="[('parent_id', '=', loc)]"/>
                </xpath>
                <!-- <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position='attributes'>
                    <attribute name="domain">[('group_id', '=', fun)]</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']" position='attributes'>
                    <attribute name="domain">[('group_id', '=', fun)]</attribute>
                </xpath> -->
            </field>
        </record>

        <record id="view_account_analytic_account_form_inherit_dxl" model="ir.ui.view">
            <field name="name">analytic.analytic.account.form.inherit.dxl</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <field name="group_id" position="before">
                    <field name="level_ids" invisible="1"/>
                </field>
                <field name="group_id" position="attributes">
                    <attribute name="domain">[('level_id', 'in', level_ids)]</attribute>
                </field>
            </field>
        </record>
        <!-- Analytic Level Tree View -->
        <record id="analytic_account_level_view_tree" model="ir.ui.view">
            <field name="name">analytic.account.level.tree.view</field>
            <field name="model">analytic.account.level</field>
            <field name="arch" type="xml">
                <tree string="Analytic Account Level">
                    <field name="name"/>
                    <field name="level"/>
                    <field name="parent_level"/>
                </tree>
            </field>
        </record>

        <!-- Analytic Level Form View -->
        <record id="analytic_account_level_view_form" model="ir.ui.view">
            <field name="name">analytic.account.level.form.view</field>
            <field name="model">analytic.account.level</field>
            <field name="arch" type="xml">
                <form string="Analytic Account Level">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="level" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                <field name="parent_level" options="{'no_quick_create': True, 'no_create_edit': True}" attrs="{'invisible': [('level', '=', 1)]}"/>
                            </group>
                            <group>
                                <field name="first_level"/>
                                <field name="last_level"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Analytic Level Action View -->
        <record id="analytic_account_level_action" model="ir.actions.act_window">
            <field name="name">Analytic Account Level</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">analytic.account.level</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Analytic Level Menu -->
        <menuitem id="account_analytic_level_menu"
            action="dxl_financial_dimensions.analytic_account_level_action"
            parent="account.menu_analytic_accounting"
            sequence="3"/>

    </data>
</odoo>