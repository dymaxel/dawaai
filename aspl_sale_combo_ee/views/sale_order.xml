<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_config_form" model="ir.ui.view">
            <field name="name">res.config.form.view.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="sale_ebay" position="before">
                    <h2>Combo Feature</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_combo"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_combo"/>
                                <div class="text-muted" id="lbl_show_image">
                                    Use combo feature in sale order
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>

        <record id="form_view_inherit_product_template" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="sale_ok" position="before">
                    <div>
                        <field name="is_combo"/>
                        <label for="is_combo" name="combo"/>
                    </div>
                </field>
                <xpath expr='//page[4]' position="after">
                    <page string="Combo" attrs="{'invisible': [('is_combo', '=', False)]}" name="combo">
                        <field name="product_combo_ids">
                            <tree editable="bottom">
                                <field name="require" attrs="{'invisible': [('select_default', '=', True)]}"/>
                                <field name="select_default" attrs="{'invisible': [('require', '=', True)]}"/>
                                <field name="category_id" attrs="{'readonly': [('require', '=', True)]}"/>
                                <field name="product_ids" widget="many2many_tags"
                                       domain="[('categ_id', 'child_of', category_id)]"/>
                                <field name="no_of_items"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_order_line_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//notebook//page/field[@name='order_line']//tree//field[@name='product_id']"
                       position="before">
                    <field name="is_combo" invisible="1"/>
                    <button class="combo" icon="fa-1x fa-pencil-square-o"
                            attrs="{'invisible':[('is_combo','=',False)]}"/>
                </xpath>
                <xpath expr="//sheet//notebook//page/field[@name='order_line']//tree//field[@name='tax_id']"
                       position="after">
                    <field name="combo_product_sequence" invisible="1"/>
                    <field name="is_sequence" invisible="1"/>
                </xpath>
            </field>
        </record>

        <template id="aspl_assets_backend" name="button assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/aspl_sale_combo_ee/static/src/js/sale_combo.js"></script>
                <link rel="stylesheet" href="/aspl_sale_combo_ee/static/src/css/sale_combo.css"/>
            </xpath>
        </template>

    </data>
</odoo>


