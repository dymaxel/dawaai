<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_inherit_dawaai_sale_automation" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.dawaai.sale.automation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr='//notebook' position='inside'>
                <page string="Payments">
                    <field name="payment_ids">
                        <tree editable="bottom">
                            <field name="journal_id" domain="[('type', 'in', ('bank', 'cash'))]"/>
                            <field name="dxl_payment_date"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_move_form_inherit_dawaai" model="ir.ui.view">
        <field name="name">account.move.inherit.dxl_dawaai</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="sale_ref"/>
            </xpath>
        </field>
    </record>
</odoo>
