<?xml version="1.0"?>
<odoo>
    <record id="view_move_form_invoice_discount" model="ir.ui.view">
        <field name="name">account.move.form.tds</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="is_discount" invisible="1"/>
            </xpath>
            <field name="amount_untaxed" position="after">
                <field name="global_discount"/>
            </field>
        </field>
    </record>
</odoo>