<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_queue_tree" model="ir.ui.view">
        <field name="name">sale.order.queue.tree</field>
        <field name="model">sale.order.queue</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" decoration-danger="state == 'failed'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="create_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_queue_form" model="ir.ui.view">
        <field name="name">sale.order.queue.form</field>
        <field name="model">sale.order.queue</field>
        <field name="arch" type="xml">
            <form string="Sale Order Queue" create="0">
                <header>
                    <button
                            name="action_run_queue_mannually"
                            string="Process Queue Manually" type="object"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', 'in', ('done', 'cancel'))]}"/>
                    <button name="action_force_done" string="Force Done"
                            type="object"
                            attrs="{'invisible':[('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,failed,done"/>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="payment_term_id"/>
                            <field name="pricelist_id"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group>
                            <field name="commitment_date"/>
                            <field name="ex_sale_order_id"/>
                            <field name="odoo_record_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines" name="order_lines">
                            <field name="order_line">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id"/>
                                    <field name="discount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Execution Log" name="partner_log_line">
                            <field name="log_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="create_date" string="Sync Date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"
                           groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_sale_order_data_queue" model="ir.actions.act_window">
        <field name="name">Sale Order Queue</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.queue</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- For Partner Data Queue Menu -->
    <menuitem id="odoo_sale_order_data_queue_menu" 
        name="Sale Order Queue" 
        parent="rpc_api_integration.odoo_data_queue_menu"
        action="action_sale_order_data_queue"
        sequence="10"/>

    <record id="sale_order_view_form_odoo_api" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.odoo.api</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="platform_id"/>
                <field name="platform_so_name" readonly="1"/>
            </field>
        </field>
    </record>

    <record id="view_warehouse_view_form_odoo_api" model="ir.ui.view">
        <field name="name">stock.warehouse.form.inherit.odoo.api</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="platform_id"/>
            </field>
        </field>
    </record>

</odoo>
