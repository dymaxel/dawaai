<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_queue_tree" model="ir.ui.view">
        <field name="name">purchase.order.queue.tree</field>
        <field name="model">purchase.order.queue</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" decoration-danger="state == 'failed'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="create_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="purchase_order_queue_form" model="ir.ui.view">
        <field name="name">purchase.order.queue.form</field>
        <field name="model">purchase.order.queue</field>
        <field name="arch" type="xml">
            <form string="Purchase Order Queue" create="0">
                <header>
                    <button
                            name="action_run_queue_mannually"
                            string="Process Queue Manually" type="object"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', 'in', ('done', 'cancel'))]}"/>
                    <button name="action_force_done" string="Force Done"
                            type="object"
                            attrs="{'invisible':[('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,failed,done"/>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="payment_term_id"/>
                            <field name="picking_type_id"/>
                        </group>
                        <group>
                            <field name="date_planned"/>
                            <field name="ex_purchase_order_id"/>
                            <field name="odoo_record_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines" name="order_lines">
                            <field name="order_line">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom"/>
                                    <field name="price_unit"/>
                                    <field name="taxes_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Execution Log" name="partner_log_line">
                            <field name="log_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="create_date" string="Sync Date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"
                           groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_purchase_order_data_queue" model="ir.actions.act_window">
        <field name="name">Purchase Order Queue</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.queue</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- For Partner Data Queue Menu -->
    <menuitem id="odoo_purchase_order_data_queue_menu" 
        name="Purchase Order Queue" 
        parent="rpc_api_integration.odoo_data_queue_menu"
        action="action_purchase_order_data_queue"
        sequence="15"/>

    <record id="purchase_order_view_form_odoo_api" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.odoo.api</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="platform_id" readonly="1"/>
                <field name="platform_po_name" readonly="1"/>
            </field>
        </field>
    </record>

</odoo>
