<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_category_queue_tree" model="ir.ui.view">
        <field name="name">product.category.queue.tree</field>
        <field name="model">product.category.queue</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" decoration-danger="state == 'failed'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="create_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="product_category_queue_form" model="ir.ui.view">
        <field name="name">product.category.queue.form</field>
        <field name="model">product.category.queue</field>
        <field name="arch" type="xml">
            <form string="Category Queue" create="0">
                <header>
                    <button
                            name="action_run_queue_mannually"
                            string="Process Queue Manually" type="object"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', 'in', ('done', 'cancel'))]}"/>
                    <button name="action_force_done" string="Force Done"
                            type="object"
                            attrs="{'invisible':[('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,failed,done"/>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="odoo_record_id"/>
                        </group>
                        <group>
                            <field name="ex_category_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Execution Log" name="partner_log_line">
                            <field name="log_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="create_date" string="Sync Date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"
                           groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_category_data_queue" model="ir.actions.act_window">
        <field name="name">Category Queue</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.category.queue</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- For Partner Data Queue Menu -->
    <menuitem id="odoo_category_data_queue_menu" 
        name="Category Queue" 
        parent="rpc_api_integration.odoo_data_queue_menu"
        action="action_category_data_queue"
        sequence="10"/>

    <record id="product_category_form_view_odoo_api" model="ir.ui.view">
        <field name="name">hs_code.product.category.form.odoo.api</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="platform_id" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
