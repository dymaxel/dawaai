<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_draft_bill_report" model="ir.actions.report">
        <field name="name">Purchase Draft Bill</field>
        <field name="model">report.dxl_dawaai_purchase.report_purchasebill</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dxl_dawaai_purchase.report_purchasebill</field>
        <field name="print_report_name">'Draft Bill - %s' % (object._get_report_name())</field>
    </record>
    <template id="report_purchasebill">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="purchase_id.with_context(lang=lang)" />
                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                </t>
                <div class="page">
                    <h2>
                        <span>Draft Bill</span>
                    </h2>
                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.name"/>
                        </div>
                    </div>
                    <table class="table table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="6"/>
                                <th name="th_description" class="text-left"><span>Description</span></th>
                                <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                                <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Net Price</span></th>
                                <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-foreach="o.order_line" t-as="line">
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <td id="product">
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="receive_line_qty[line.id] or 0.0"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td name="td_taxes">
                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="receive_line_qty[line.id] * line.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div id="total" class="row justify-content-end">
                        <div class="col-4">
                            <table class="table table-sm">
                                <tr class="border-black">
                                    <td name="td_subtotal_label"><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-esc="sub_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td name="td_taxes_label">Taxes</td>
                                    <td class="text-right">
                                        <span t-esc="tax_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td name="td_amount_total_label"><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-esc="final_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
